@{
    ViewData["Title"] = "Kullanıcı Kaydet";
    var apiBaseUrl = ViewBag.ApiBaseUrl;
    var captchaKey = ViewBag.CaptchaKey;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    
    <link rel="stylesheet" href="~/css/addUser.css">
    
</head>
<body>
    <div class="container mt-5" data-api-base-url="@apiBaseUrl"></div>
    <div>
        <!-- API base URL'yi burada belirtin -->
        <div class="form-header">
            <h2 class="mb-4">@ViewData["Title"]</h2>
        </div>
        <div class="form-container">
            <form id="registrationForm">
                <div class="form-step active">
                    <p>Lütfen bilgilerinizi adım adım giriniz.</p>
                   
                    <div class="form-group">
                        <label for="name">İsim</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                </div>
                <div class="form-step">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>
                <div class="form-step">
                    <div class="form-group">
                        <label for="password">Şifre</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <div class="form-step">
                    <div class="form-group">
                        <label for="confirmPassword">Şifre Tekrar</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    </div>
                </div>
                <div class="form-step">
                    <div class="form-group">
                        <label for="profilePicture">Profil Resmi</label>
                        <input type="file" class="form-control-file" id="profilePicture" name="profilePicture" required>
                    </div>
                </div>
                <div class="form-step">
                    <div class="form-group recaptcha-container">
                        <div class="g-recaptcha" data-sitekey="@captchaKey"></div>
                    </div>
                </div>
               
                <div class="d-grid gap-2 d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-secondary btn-custom" id="prevBtn">Önceki</button>
                    <button type="button" class="btn btn-primary btn-custom" id="nextBtn">Sonraki</button>
                </div>
                <div class="progress mt-4">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 0%" id="progressBar">
                        %0
                    </div>
                    
                </div>
            </form>
            <div class="loading" id="loadingIndicator">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Yükleniyor...</span>
                </div>
                <div>Yükleniyor...</div>
            </div>
            <div class="success-message" id="successMessage">
                ✔️ Başarılı bir şekilde kaydedildi!
            </div>
        </div>
    </div>

        <script src="~/js/addUser.js"></script>
</body>
</html>
